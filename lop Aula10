questão 1)
#include <stdio.h>

int main() {
    int calculo;
    float num1, num2, a;

    printf("Digite uma opção de 1 a 4 sendo:\n1 - soma\n2 - subtração\n3 - divisão\n4 - multiplicação: ");
    scanf("%d", &calculo);

    switch (calculo) {

    case 1:
        printf("Digite o primeiro número: ");
        scanf("%f", &num1);
        printf("Digite o segundo número: ");
        scanf("%f", &num2);
        a = num1 + num2;
        printf("A soma é: %.2f\n", a);
        break;

    case 2:
        printf("Digite o primeiro número: ");
        scanf("%f", &num1);
        printf("Digite o segundo número: ");
        scanf("%f", &num2);
        a = num1 - num2;
        printf("A subtração é: %.2f\n", a);
        break;

    case 3:
        printf("Digite o primeiro número: ");
        scanf("%f", &num1);
        printf("Digite o segundo número: ");
        scanf("%f", &num2);
        if (num2 != 0) {
            a = num1 / num2;
            printf("A divisão é: %.2f\n", a);
        } else {
            printf("Erro: divisão por zero.\n");
        }
        break;

    case 4:
        printf("Digite o primeiro número: ");
        scanf("%f", &num1);
        printf("Digite o segundo número: ");
        scanf("%f", &num2);
        a = num1 * num2;
        printf("A multiplicação é: %.2f\n", a);
        break;

    default:
        printf("Opção inválida!\n");
    }

    return 0;
}

questão 2
#include <stdio.h>

int main() {
    char sexo;
    float peso, peso_ideal;

    printf("Digite o sexo (M/F): ");
    scanf(" %c", &sexo);

    printf("Digite o peso atual: ");
    scanf("%f", &peso);

    switch(sexo) {
        case 'M':
        case 'm':
            peso_ideal = (peso - 100) * 0.9;
            printf("O peso ideal para um homem é: %.2f kg\n", peso_ideal);
            break;
        case 'F':
        case 'f':
            peso_ideal = (peso - 100) * 0.85;
            printf("O peso ideal para uma mulher é: %.2f kg\n", peso_ideal);
            break;
        default:
            printf("Opção inválida. Por favor, digite 'M' ou 'F'.\n");
    }

    return 0;
}
