questão 1)
#include <iostream>

using namespace std;

int main() {
    char operacao;
    float num1, num2, resultado;

    cout << "Escolha a operacao desejada (+, -, *, /): ";
    cin >> operacao;
    cout << "Digite dois numeros: ";
    cin >> num1 >> num2;

    switch(operacao) {
        case '+':
            resultado = num1 + num2;
            cout << "Resultado: " << resultado << endl;
            break;
        case '-':
            resultado = num1 - num2;
            cout << "Resultado: " << resultado << endl;
            break;
        case '*':
            resultado = num1 * num2;
            cout << "Resultado: " << resultado << endl;
            break;
        case '/':
            if (num2 != 0) {
                resultado = num1 / num2;
                cout << "Resultado: " << resultado << endl;
            } else {
                cout << "Erro: divisao por zero!" << endl;
            }
            break;
        default:
            cout << "Operacao invalida!" << endl;
    }

    return 0;
}


questão 2
#include <iostream>

using namespace std;

int main() {
    char sexo;
    float peso, pesoIdeal;

    cout << "Digite seu sexo (M para Masculino, F para Feminino): ";
    cin >> sexo;

    cout << "Digite seu peso: ";
    cin >> peso;

    if (sexo == 'M') {
        pesoIdeal = (peso - 100) * 0.9;
    } else if (sexo == 'F') {
        pesoIdeal = (peso - 100) * 0.85;
    } else {
        cout << "Sexo inválido!" << endl;
        return 1;
    }

    cout << "Seu peso ideal é: " << pesoIdeal << " kg" << endl;

