#include <stdio.h>

int main(){
    float nota1, nota2, nota3, soma, media;
    int resp;

    do{
        printf("Digite a primeira nota: ");
        scanf("%f", &nota1);
        
        printf("Digite a segunda nota: ");
        scanf("%f", &nota2);
        
        printf("Digite a terceira nota: ");
        scanf("%f", &nota3);
        
        soma = nota1 + nota2 + nota3;
        media = (nota1+nota2+nota3)/3;
        
        printf("Soma das notas: %.2f\n", soma);
        printf("MÃ©dia das notas: %.2f\n", media);
        
        printf("\nDigite 1 para continuar ou digite 2 para sair: ");
        scanf("%d", &resp);
        
    } while(resp==1);
    
    return 0;
}
